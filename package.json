{
    "name": "penguin-js",
    "version": "0.0.2",
    "main": "index.js",
    "scripts": {
        "start": "npm run build && node index",
        "watch:app": "nodemon -L index --ignore node_modules",
        "watch:routes": "SHELL=/bin/bash chokidar \"./modules/**/routes/*.js\" -c \"npm run swagger\"",
        "dev": "concurrently npm:watch:*",
        "build": "npm run swagger",
        "swagger": "node swagger.js",
        "lint": "eslint --ext .js --cache --fix --ignore-path .gitignore .",
        "format": "prettier --write \"./**/*.js\""
    },
    "keywords": [
        "nodejs-framework",
        "express-framework",
        "framework"
    ],
    "author": "Samayun Miah Chowdhury<samayun.m.chowdhury@gmail.com>",
    "license": "ISC",
    "description": "Penguin is an opinionated express framework provides rapid development facility",
    "dependencies": {
        "aws-sdk": "^2.987.0",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-fileupload": "^1.2.1",
        "jwt-auth-helper": "^1.0.0",
        "mongoose": "^6.0.4",
        "multer": "^1.4.3",
        "multer-s3": "^2.9.0",
        "swagger-autogen": "^2.17.2",
        "swagger-ui-express": "^4.1.6"
    },
    "devDependencies": {
        "chokidar-cli": "^3.0.0",
        "concurrently": "^7.0.0",
        "eslint": "~8.7.0",
        "eslint-config-prettier": "8.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^4.3.7",
        "lint-staged": "^12.1.3",
        "nodemon": "^2.0.12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run format"
        }
    },
    "lint-staged": {
        "*.{js,}": [
            "npm run lint",
            "npm run format"
        ]
    }
}
